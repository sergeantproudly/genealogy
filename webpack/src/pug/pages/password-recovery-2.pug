extends ../includes/template.pug

block title
    | Genealogy - Are you sure


block content
    .stick.stick_blue
        .stick__top
            include ../includes/header.pug
            +header()
            section.password-recovery
                .container
                    .row
                        .col-lg-12
                            h1.password-recovery__headline Восстановление пароля
                            p.password-recovery__description Введите код, высланный на e-mail и придумайте новый пароль
                            form(
                                action=""
                            ).password-recovery__form
                                label.default-field-with-label
                                    // default-field-with-label_error
                                    span.default-field-with-label__label Код
                                    .default-field__shell
                                        input(
                                            type="text"
                                            placeholder="Ввести"
                                            value="1233"
                                        ).default-field-with-label__field
                                    span.default-field-with-label__error Такой фамилии не существует
                                label.default-field-with-label
                                    // default-field-with-label_error
                                    span.default-field-with-label__label Новый пароль
                                    .default-field__shell
                                        input(
                                            type="text"
                                            placeholder="Ввести"
                                            value="asdfx323z2z"
                                        ).default-field-with-label__field
                                        button(
                                            type="button"
                                        ).default-field__eye
                                    span.default-field-with-label__error Такой фамилии не существует
                                label.default-field-with-label
                                    // default-field-with-label_error
                                    span.default-field-with-label__label Новый пароль еще раз
                                    .default-field__shell
                                        input(
                                            type="password"
                                            placeholder="Ввести"
                                            value="asdfx323z2z"
                                        ).default-field-with-label__field
                                        button(
                                            type="button"
                                        ).default-field__eye.default-field__eye_active
                                    span.default-field-with-label__error Такой фамилии не существует
                                button(
                                    
                                ).default-button.password-recovery__form__login
                                    // disabled
                                    // default-button_loader
                                    span.default-button__text Восстановить пароль
    include ../includes/footer.pug