extends ../includes/template.pug

block title
    | Genealogy - Contacts


block content
    .stick__top
        include ../includes/header.pug
        +header()
        section.contacts
            .container
                .row
                    .col-lg-12
                        .tabs-with-headline
                            h2.tabs-with-headline__headline Информация
                            .tabs-with-headline__tabs
                                a(
                                    href="management"
                                ).tabs-with-headline__tab
                                    span.tabs-with-headline__tab__text Руководство
                                a(
                                    href=""
                                ).tabs-with-headline__tab 
                                    span.tabs-with-headline__tab__text Структура
                                a(
                                    href="goals-and-objectives"
                                ).tabs-with-headline__tab 
                                    span.tabs-with-headline__tab__text Цели и задачи
                                a(
                                    href="job-openings"
                                ).tabs-with-headline__tab 
                                    span.tabs-with-headline__tab__text Вакансии
                                a(
                                    href="contacts"
                                ).tabs-with-headline__tab.tabs-with-headline__tab_active 
                                    span.tabs-with-headline__tab__text Контакты
                                    
                    .col-lg-4
                        h1.contacts__headline Контакты
                        p.contacts__label
                            span.contacts__label__name Адрес
                            span.contacts__label__text 420107, г. Казань, Достоевского, 66/17
                        p.contacts__label
                            span.contacts__label__name Телефон
                            a(
                                href="#"
                            ).contacts__label__text +7 (951) 891-92-75
                        p.contacts__label
                            span.contacts__label__name E-Mail
                            a(
                                href="#"
                            ).contacts__label__text info@geneologia.ru
                        p.contacts__label
                            span.contacts__label__name Часы приема
                            span.contacts__label__text 
                                |Пн-Сб с 8:00 до 18:00
                                br
                                |Вс выходной 
                    .col-lg-8
                        script(
                            src="https://api-maps.yandex.ru/2.1/?lang=ru_RU&amp;apikey=328a7ce9-1425-4221-bc54-21ff65a36749"
                        )
                        .contacts__map#map
                        script.
                            // Карта
                            if (document.querySelector('#map')) {
                                ymaps.ready(function () {
                                    var map = new ymaps.Map('map', {
                                        center: [55.787348, 49.155500],
                                        zoom: 14,
                                        controls: []
                                    });

                                    // Создание метки со сложной фигурой активной области.
                                    var polygonLayout = ymaps.templateLayoutFactory.createClass('<div class="contacts__map__label"><img class="contacts__map__label__image" src="assets/img/label-map.svg" /></div>');

                                    var polygonPlacemark = new ymaps.Placemark(
                                        [55.787348, 49.155500], {
                                            hintContent: ''
                                        }, {
                                            iconLayout: polygonLayout
                                        }
                                    );
                                    map.geoObjects.add(polygonPlacemark);
                                });
                            }
                    .col-lg-12
                        .contacts__form
                            h2.contacts__headline Задать вопрос
                            .contacts__form__top
                                .contacts__form__column
                                    label.default-field-with-label
                                        // default-field-with-label_error
                                        span.default-field-with-label__label Ваше имя
                                        input(
                                            type="text"
                                            placeholder=""
                                            value="Константин"
                                        ).default-field-with-label__field
                                        span.default-field-with-label__error Такой фамилии не существует
                                .contacts__form__column
                                    label.default-field-with-label
                                        // default-field-with-label_error
                                        span.default-field-with-label__label Фамилия
                                        input(
                                            type="text"
                                            placeholder=""
                                            value="Светлов"
                                        ).default-field-with-label__field
                                        span.default-field-with-label__error Такой фамилии не существует
                                .contacts__form__column
                                    label.default-field-with-label
                                        // default-field-with-label_error
                                        span.default-field-with-label__label Email
                                        input(
                                            type="email"
                                            placeholder=""
                                            value="kostya@gmail.com"
                                        ).default-field-with-label__field
                                        span.default-field-with-label__error Такой фамилии не существует
                            label.default-textarea-with-label
                                // default-textarea-with-label_error
                                span.default-textarea-with-label__label Фамилия
                                textarea(
                                    type="text"
                                    placeholder=""
                                ).default-textarea-with-label__field Здравствуйте! Меня интересует такой вопрос, как я могу получить результаты генеалогического исследования? Спасибо!
                                span.default-textarea-with-label__error Такой фамилии не существует
                            
                            .contacts__form__bottom
                                .contacts__form__bottom__left
                                    label.contacts__form__agree
                                        input(
                                            type="checkbox"
                                            checked
                                        ).contacts__form__agree__input
                                        span.contacts__form__agree__text Согласен(а) на обработку, хранение и направление моих персональных данных в целях рассмотрения обращения.
                                .contacts__form__bottom__right
                                    button.default-button Отправить
                                
    include ../includes/footer.pug